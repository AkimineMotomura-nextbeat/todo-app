# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                 controllers.HomeController.index
# 一覧ページ
GET     /todo/list                        controllers.TodoController.todoList
#新規作成ページ
GET     /todo/new                         controllers.TodoController.register
#　編集ページ
GET     /todo/$id<[0-9]+>                 controllers.TodoController.edit(id: Long)
#新規作成のPOST先
POST    /todo/new                         controllers.TodoController.store
# 編集後のPOST先
POST    /todo/$id<[0-9]+>                 controllers.TodoController.update(id: Long)
# DELETE
POST    /todo/delete                      controllers.TodoController.delete

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
